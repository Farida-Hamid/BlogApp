<div>
  <div class="user_container">
    <div class="photo"></div>
    <div class="user-info">
      <h1><%= @user.name%></h1>
      <h4>Number of posts: <%= @user.postscounter%></h4>
    </div>
  </div>
  <div class="posts">
    <% @posts.each_with_index do |post, index|%>
      <h3>Post #<%= index+1%></h3>
      <p><%= post.text%></p>
      <p><%= post.comments_counter%></p>
      <p><%= post.likes_counter%></p>
      <% post.recent_comments.each do |comment|%>
        <p><%= User.find(comment.author_id).name %>: <%= comment.text %></p>
      <%end%>
    <%end%>
  </div>
</div>